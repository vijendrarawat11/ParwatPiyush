@{
    ViewData["Title"] = "Create News";
}
@model ParwatPiyushNewsPortal.Models.News
@using ParwatPiyushNewsPortal.Models

<h2>Create a News Article</h2>

<form method="post" enctype="multipart/form-data">
  
    <div class="form-group">
        <label>Topic</label>
        <select asp-for="TopicId" class="form-control" required>
            <option value="">-- Select a Topic --</option>
            @foreach (var topic in ViewBag.Topics as List<Topics>)
            {
                <option value="@topic.Id">@topic.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Title</label>
        <input type="text" name="Title" class="form-control" required />
    </div>
    @* <div class="form-group"> *@
    @*     <label>Content</label> *@
    @*     <textarea name="Content" class="form-control" required></textarea> *@
    @* </div> *@
    <div class="form-group">
        <label asp-for="Content" class="control-label"></label>
        <textarea asp-for="Content" class="form-control" rows="6"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Author</label>
        <input type="text" name="Author" class="form-control" />
    </div>
    <div class="form-group">
        <label>Upload Image</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
