<div class="container mt-4">
    <div class="row">
        <!-- Left Content Area (News Content) -->
        <div class="col-lg-12">
            <!-- Heading -->
            <h2 class="fw-bold">@Model.Title</h2>

            <!-- Date -->
            <p class="text-muted">@Model.PublishedDate.ToString("dd MMM yyyy")</p>

            <!-- Full Image -->
            @* <img src="@Model.ImagePath" alt="News Image" class="img-fluid my-3" style="width: 100%; height: auto;" /> *@
            <img src="@Model.ImagePath" alt="News Image" style="width: 100%;height: auto;" />

            <!-- Content -->
            @* <p class="fs-5">@Model.Content</p> *@
            <div class="news-body" style="white-space: pre-line;">
                @Model.Content
            </div>

            <!-- Social Media Icons -->
            <div class="my-4">
                <a href="#" class="text-primary me-3"><i class="bi bi-facebook fs-4"></i></a>
                <a href="#" class="text-danger me-3"><i class="bi bi-instagram fs-4"></i></a>
                <a href="#" class="text-dark"><i class="bi bi-whatsapp fs-4"></i></a>
            </div>

             <!-- Horizontal Divider --> 
            <hr /> 
            <!-- Navigation Links with Titles and Vertical Divider -->
            <div class="d-flex justify-content-between align-items-center">
                        @if (ViewBag.PreviousNews != null)
                        {
                            <div class="col-5 text-start">
                                <a href="@Url.Action("Details", "Home", new { id = ViewBag.PreviousNews.Id })"  
                                class="text-decoration-none text-dark fw-bold">
                                    &laquo; @ViewBag.PreviousNews.Title
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="col-5 text-start text-muted">No Previous News</div>
                        }

                            <!-- Vertical Line -->
                            <div class="border-start" style="height: 40px;"></div>

                            @if (ViewBag.NextNews != null)
                            {
                                <div class="col-5 text-end">
                                     <a href="@Url.Action("Details", "Home", new { id = ViewBag.NextNews.Id })" 
                                       class="text-decoration-none text-dark fw-bold">
                                        @ViewBag.NextNews.Title &raquo;
                                    </a>
                                </div>
                            }
                            else
                            {
                                <div class="col-5 text-end text-muted">No Next News</div>
                            }
                </div>
    </div>
