@{
}
@model News

<div class="container mt-4">
    <h2>@Model.Title</h2>
    <p><strong>Published Date:</strong> @Model.PublishedDate.ToShortDateString()</p>
    <p><strong>Topic:</strong> <a href="@Url.Action("Topic", "Home", new { name = Model.Topic.Name })">@Model.Topic.Name</a></p>
    
    <img src="@Model.ImagePath" class="img-fluid my-3" alt="News Image">

    <p>@Model.Content</p>
</div>

<a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to Home</a>
