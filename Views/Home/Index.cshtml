 <script>
        const slider = document.querySelector('.slider');
        let index = 0;
        const totalSlides = document.querySelectorAll('.slide').length;
        function autoScroll() {
            index++;
            if (index >= totalSlides) {
                index = 0;
            }
            updateSlidePosition();
        }
        function updateSlidePosition() {
            slider.style.transform = `translateX(-${index * 100}%)`;
        }
        function prevSlide() {
            index--;
            if (index < 0) {
                index = totalSlides - 1;
            }
            updateSlidePosition();
        }
        function nextSlide() {
            index++;
            if (index >= totalSlides) {
                index = 0;
            }
            updateSlidePosition();
        }
        setInterval(autoScroll, 30000);
</script>


