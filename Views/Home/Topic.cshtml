<div class="container mt-4">
    <div class="row">
        <!-- Left Content Area: News Cards -->
        <div class="col-lg-8">
            <div class="row">
                @foreach (var news in Model)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card h-100 shadow-sm">
                            <div class="position-relative">
                                <img src="@news.ImagePath" class="card-img-top" style="height: 200px; object-fit: cover;" alt="News Image" />
                                <span class="position-absolute top-0 start-0 bg-danger text-white px-2 py-1">@news.Topic.Name</span>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="@Url.Action("Details", "Home", new { id = news.Id })" class="text-dark text-decoration-none news-link">
                                        @news.Title
                                    </a>
                                </h5>
                                <p class="text-muted mb-1">@news.PublishedDate.ToString("dd MMM yyyy")</p>
                                <p class="card-text">@news.Content?.Substring(0, Math.Min(news.Content.Length, 100))...</p>
                                <a href="@Url.Action("Details", "Home", new { id = news.Id })" class="btn btn-sm btn-outline-primary">Read More</a>
                            </div>
                        </div>
                    </div>
                }
